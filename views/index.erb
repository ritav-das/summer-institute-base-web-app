<h1 class="display-4 py-3 mb-3 border-bottom">
  <%= title %>
</h1>

<div>
    <ul class="list-group list-group-horizontal col-md-12 flex-wrap">

    <%- projects.each do |project| -%>
        <li class="cool-border list-group-item m-3 btn btn-outline-dark">
            <a href="<%= url("/projects/#{project}")%>">
                <i class="fas fa-camera fa-5x"></i>
                <p><%= project.gsub('_', ' ').capitalize %></p>
            </a>
        </li>
    <%- end -%>

    </ul>
</div>
